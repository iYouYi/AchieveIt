<Window x:Class="AchieveItSystemUI.View.PortalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AchieveItSystemUI.View"
        mc:Ignorable="d"
        Title="PortalWindow" 
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        x:Name="Portal">

    <Grid>
        <Grid.Resources>
            <SolidColorBrush x:Key="TextColor" Color="#333333"/>
            <Style x:Key="ImageButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="150"/>
                <Setter Property="Height" Value="150"/>
                <Setter Property="Margin" Value="15"/>
                <Setter Property="Background" Value="#F5F5F5"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border 
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="BorderBrush" Value="#2196F3"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#BBDEFB"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TargetButtonStyle" TargetType="Button" BasedOn="{StaticResource ImageButtonStyle}">
                <Setter Property="Width" Value="250"/>
                <Setter Property="Height" Value="250"/>
                <Setter Property="Margin" Value="0"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Achieve It" FontSize="40" FontWeight="Bold" Foreground="{StaticResource TextColor}" Margin="0,0,0,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding EverydaySentence}"  FontSize="20" Margin="20,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        </StackPanel>

        <Grid Grid.Row="1">
            <TextBlock Text="{Binding CurrentDateTime,StringFormat='yyyy年MM月dd日 ddd HH:mm:ss',ConverterCulture='zh-CN'}" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <Button Style="{StaticResource TargetButtonStyle}" Command="{Binding TargetCommand}">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/AchieveItSystemUI;component/icon/target.png" Width="128" Height="128" Stretch="Uniform"/>
                        <TextBlock Text="目标" HorizontalAlignment="Center" FontSize="16" Foreground="#333333" Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>

            <Grid Grid.Column="1">
                <UniformGrid Columns="2" Rows="2" Margin="20">
                    <Button Style="{StaticResource ImageButtonStyle}" Command="{Binding TomatoClockCommand}" CommandParameter="{Binding ElementName=Portal}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/AchieveItSystemUI;component/icon/AlarmClock.png" Width="100" Height="100" Stretch="Uniform"/>
                            <TextBlock Text="DIY 番茄钟" HorizontalAlignment="Center" FontSize="16" Foreground="#333333" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ImageButtonStyle}" Command="{Binding FocusModeCommand}" CommandParameter="{Binding ElementName=Portal}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/AchieveItSystemUI;component/icon/FocusMode.png" Width="100" Height="100" Stretch="Uniform"/>
                            <TextBlock Text="专注模式" HorizontalAlignment="Center" FontSize="16" Foreground="#333333" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ImageButtonStyle}" Command="{Binding CheckInCommand}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/AchieveItSystemUI;component/icon/CheckIn.png" Width="100" Height="100" Stretch="Uniform"/>
                            <TextBlock Text="打卡" HorizontalAlignment="Center" FontSize="16" Foreground="#333333" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ImageButtonStyle}" Command="{Binding TossCoinCommand}" CommandParameter="{Binding ElementName=Portal}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="/AchieveItSystemUI;component/icon/TossCoin.png" Width="100" Height="100" Stretch="Uniform"/>
                            <TextBlock Text="换硬币" HorizontalAlignment="Center" FontSize="16" Foreground="#333333" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>
            </Grid>
        </Grid>

        <Grid Grid.Row="3"/>
    </Grid>
</Window>
