<Window x:Class="AchieveItSystemUI.CoinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:AchieveItSystemUI"
        Title="{Binding WindowTitle}" Height="400" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="#f0f0f0"
        x:Name="Coinwindow">

    <Window.Resources>
        <ui:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <ui:CoinWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Command="{Binding BackPortalCommand}" CommandParameter="{Binding ElementName=Coinwindow}" Margin="0,0,10,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" BorderThickness="0">
                            <TextBlock 
                                FontFamily="{StaticResource SymbolThemeFontFamily}" 
                                Text="&#xE72B;"
                                FontSize="20" 
                                Foreground="Black" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <TextBox Text="{Binding WindowTitle, UpdateSourceTrigger=PropertyChanged}" 
                    Width="200"
                    FontSize="14"
                    Padding="5"
                    VerticalAlignment="Center"
                    BorderThickness="1"
                    BorderBrush="#ccc"/>
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <Border Width="150" Height="150" 
                    Background="White" 
                    BorderBrush="#ccc" 
                    BorderThickness="2"
                    CornerRadius="75"
                    Margin="0,0,0,30">
                <Viewbox>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Coin.SideEmoji}" 
                                  FontSize="48" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Coin.SideText}" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Viewbox>
            </Border>

            <Button Content="抛硬币" 
                   Command="{Binding FlipCoinCommand}"
                   Background="#4CAF50"
                   Foreground="White"
                   FontSize="16"
                   FontWeight="Bold"
                   Padding="30,15"
                   BorderThickness="0"
                   Cursor="Hand"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#80000000" 
               Visibility="{Binding Coin.IsFlipping, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="翻转中..." 
                      Foreground="White" 
                      FontSize="18" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>