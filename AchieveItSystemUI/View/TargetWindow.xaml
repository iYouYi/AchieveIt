<Window x:Class="AchieveItSystemUI.TargetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AchieveItSystemUI"
        mc:Ignorable="d"
        x:Name="Targetwindow"
        WindowStartupLocation="CenterScreen"
        Title="任务管理工具" Height="700" Width="1100">
    <Window.Resources>
        <local:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>
        <local:ProgressToColorConverter x:Key="ProgressToColorConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:StringToBrushConverter x:Key="StringToBrushConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部文件选择区域 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Command="{Binding BackPortalCommand}" CommandParameter="{Binding ElementName=Targetwindow}" Margin="0,0,10,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" BorderThickness="0">
                            <TextBlock 
                    FontFamily="{StaticResource SymbolThemeFontFamily}" 
                    Text="&#xE72B;"
                    FontSize="20" 
                    Foreground="Black" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="选择Excel文件" Width="120" Height="30" Command="{Binding SelectFileCommand}" Margin="0,0,10,0"/>
            <Button Content="下载Excel模板" Width="120" Height="30" Command="{Binding DownloadTemplateCommand}" Margin="0,0,10,0"/>
            <TextBox Width="350" Height="30" IsReadOnly="True" Text="{Binding FilePathText}" VerticalContentAlignment="Center"/>
            <Button Content="打开Excel文件" Width="120" Height="30" Command="{Binding OpenExcelCommand}" Margin="10,0,10,0"/>
            <Button Content="新增目标" Width="120" Height="30" Command="{Binding AddNewCommand}" Margin="0,0,10,0"/>
            <Button Content="刷新" Width="80" Height="30" Command="{Binding RefreshCommand}" Margin="0,0,10,0"/>
        </StackPanel>

        <!-- 中间内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧进度条区域 -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                <Border BorderBrush="#E0E0E0" BorderThickness="2" Height="30" CornerRadius="15" Background="#F5F5F5">
                    <Grid>
                        <Border Background="{Binding ProgressPercent, Converter={StaticResource ProgressToColorConverter}}" 
                                HorizontalAlignment="Left" Width="{Binding ProgressPercent, Converter={StaticResource ProgressToWidthConverter}}" 
                                Height="30" CornerRadius="15"/>
                        <TextBlock Text="{Binding ProgressPercent, StringFormat={}{0:F0}%}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   FontSize="16" FontWeight="Bold" Foreground="#333"/>
                    </Grid>
                </Border>
                <TextBlock Text="{Binding ProgressDescription}" HorizontalAlignment="Center" 
                           FontSize="14" Margin="0,10,0,0" Foreground="#666"/>
            </StackPanel>

            <!-- 右侧任务列表 -->
            <ListBox Grid.Column="1" 
                 ItemsSource="{Binding Tasks}"
                 SelectedItem="{Binding SelectedTask}"
                 SelectionMode="Single"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock FontSize="14" FontWeight="Bold" Text="{Binding 日期}" Foreground="#2196F3"/>
                            <TextBlock FontSize="12" Text="{Binding 第几天}" Foreground="#FF9800" Margin="0,2,0,0"/>
                            <TextBlock FontSize="14" Text="{Binding 核心主题}" Foreground="#333" Margin="0,5,0,0"/>
                            <TextBlock FontSize="12" Text="{Binding 具体任务内容}" Foreground="#666" Margin="0,2,0,0" 
                                   TextTrimming="CharacterEllipsis" MaxHeight="40"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock FontSize="11" Text="状态:" Foreground="#666"/>
                                <TextBlock FontSize="11" Text="{Binding 是否完成}" 
                                       Foreground="{Binding 状态颜色, Converter={StaticResource StringToBrushConverter}}" 
                                       Margin="5,0,0,0"/>
                                <TextBlock FontSize="11" Text="|" Foreground="#666" Margin="5,0,5,0"/>
                                <TextBlock FontSize="11" Text="逾期:" Foreground="#666"/>
                                <TextBlock FontSize="11" Text="{Binding 是否逾期}" 
                                       Foreground="{Binding 逾期颜色, Converter={StaticResource StringToBrushConverter}}" 
                                       Margin="5,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- 底部详细信息区域 -->
        <Grid Grid.Row="2" Visibility="{Binding IsDetailVisible, Converter={StaticResource BooleanToVisibilityConverter}}" 
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 第一行：任务日期和核心主题 -->
            <Label Grid.Row="0" Grid.Column="0" Content="任务日期：" VerticalAlignment="Center" 
                   HorizontalAlignment="Right" FontSize="16" Margin="0,0,10,0"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedTaskDetail.日期}" 
                     IsReadOnly="False" Height="40" VerticalContentAlignment="Center" 
                     FontSize="16" Margin="0,0,20,0"/>

            <Label Grid.Row="0" Grid.Column="2" Content="核心主题：" VerticalAlignment="Center" 
                   HorizontalAlignment="Right" FontSize="16" Margin="0,0,10,0"/>
            <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding SelectedTaskDetail.核心主题}" 
                     IsReadOnly="False" Height="40" VerticalContentAlignment="Center" 
                     FontSize="16" Margin="0,0,20,0"/>

            <Button Grid.Row="0" Grid.Column="4" Content="提交修改" Width="120" Height="40" 
                    Command="{Binding SubmitCommand}" FontSize="16"/>

            <!-- 第二行：具体任务 -->
            <Label Grid.Row="1" Grid.Column="0" Content="具体任务：" VerticalAlignment="Center" 
                   HorizontalAlignment="Right" FontSize="16" Margin="0,10,10,0"/>
            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Text="{Binding SelectedTaskDetail.具体任务}" 
                     IsReadOnly="False" Height="80" VerticalContentAlignment="Top" FontSize="16" 
                     Margin="0,10,0,0" TextWrapping="Wrap" AcceptsReturn="True" 
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>

            <!-- 第三行：是否完成 -->
            <Label Grid.Row="2" Grid.Column="0" Content="是否完成：" VerticalAlignment="Center" 
                   HorizontalAlignment="Right" FontSize="16" Margin="0,10,10,0"/>
            <CheckBox Grid.Row="2" Grid.Column="1" IsChecked="{Binding SelectedTaskDetail.是否完成}" 
                      Height="50" VerticalAlignment="Center" FontSize="20" HorizontalAlignment="Left" 
                      Margin="0,10,0,0">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                </CheckBox.LayoutTransform>
            </CheckBox>

            <!-- 第四行：完成日期和是否逾期 -->
            <Label Grid.Row="3" Grid.Column="0" Content="完成日期：" VerticalAlignment="Center" 
                   HorizontalAlignment="Right" FontSize="16" Margin="0,10,10,0"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SelectedTaskDetail.完成日期}" 
                     IsReadOnly="False" Height="40" VerticalContentAlignment="Center" 
                     FontSize="16" Margin="0,10,20,0"/>

            <Label Grid.Row="3" Grid.Column="2" Content="是否逾期：" VerticalAlignment="Center" 
                   HorizontalAlignment="Right" FontSize="16" Margin="0,10,10,0"/>
            <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding SelectedTaskDetail.是否逾期}" 
                     IsReadOnly="False" Height="40" VerticalContentAlignment="Center" 
                     FontSize="16" Margin="0,10,0,0"/>
        </Grid>
    </Grid>
</Window>